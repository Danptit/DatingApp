    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/chatToolbar">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradientbackground">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/khanhdev"
                android:id="@+id/imgUserToolbar"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="25dp">
                <TextView
                    android:id="@+id/txtNameToolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khánh Nguyễn"
                    android:textColor="#fff"
                    android:textStyle="italic"
                    android:layout_weight="5"
                    android:padding="0dp"/>
                <TextView
                    android:id="@+id/txtBirdayToolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="12 - 04 - 1997"
                    android:textColor="#fff"
                    android:textStyle="italic"
                    android:layout_weight="6"
                    android:padding="0dp"/>
            </LinearLayout>

        </android.support.v7.widget.Toolbar>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/chatToolbar"
        android:layout_above="@id/type_message_area">

    </android.support.v7.widget.RecyclerView>


